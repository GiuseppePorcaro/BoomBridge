<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChooseLevelActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_title2" />

    <Button
        android:id="@+id/tutorialButton"
        android:layout_width="145dp"
        android:layout_height="65dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/button_selector"
        android:onClick="tutorialButtonPressed"
        android:text="@string/levelOneButton"
        android:textColor="@color/backgroundColor"
        app:layout_constraintBottom_toTopOf="@+id/levelOneButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/levelOneButton"
        android:layout_width="145dp"
        android:layout_height="65dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/button_selector"
        android:onClick="levelOneButtonPressed"
        android:text="@string/levelTwoButton"
        android:textColor="@color/backgroundColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="145dp"
        android:layout_height="65dp"
        android:background="@drawable/button_selector"
        android:text="@string/howToPlayButton"
        android:textColor="@color/backgroundColor"
        app:layout_constraintBottom_toTopOf="@+id/tutorialButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.628"
        android:onClick="howToPlayButtonPressed"/>

</androidx.constraintlayout.widget.ConstraintLayout>